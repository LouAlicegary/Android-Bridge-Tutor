<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/main"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_height="fill_parent"
	android:layout_width="fill_parent">

//Header for Deal 
	<LinearLayout android:id="@+id/header"
		android:background="#ff347c12"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		>
		<TextView android:id="@+id/spades"
			android:layout_height="fill_parent"
			android:layout_width="wrap_content"
			android:gravity="center"
			android:text="Spades"
			android:height="20dip"
			android:width="80dip"
		/>
		<TextView android:id="@+id/hearts"
			android:layout_height="fill_parent"
			android:layout_width="wrap_content"
			android:gravity="center"
			android:text="Hearts"
			android:height="20dip"
			android:width="80dip"
		/>
		<TextView android:id="@+id/diamonds"
			android:layout_height="fill_parent"
			android:layout_width="wrap_content"
			android:gravity="center"
			android:text="Diamonds"
			android:height="20dip"
			android:width="80dip"
		/>
		<TextView android:id="@+id/clubs"
			android:layout_height="fill_parent"
			android:layout_width="wrap_content"
			android:gravity="center"
			android:text="Clubs"
			android:height="20dip"
			android:width="80dip"
		/>
	</LinearLayout>

//Thin Divider
	<LinearLayout android:id="@+id/thin_divider" 
		android:layout_width="fill_parent"
		android:layout_height="1dip"
		android:background="?android:attr/listDivider"
	/>
		
//Dealt Cards - Grouped into ListViews by Suit
	<LinearLayout android:id="@+id/layout1"
	    android:orientation="horizontal"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		<ListView android:id="@+id/listview1"
			android:dividerHeight="0dip"
			android:divider="#00000000"
			android:layout_height="wrap_content"
			android:layout_width="80dip">
		</ListView>
		<ListView android:id="@+id/listview2"
			android:dividerHeight="0dip"
			android:divider="#00000000"
			android:layout_height="wrap_content"
			android:layout_width="80dip">
		</ListView>
		<ListView android:id="@+id/listview3"
			android:dividerHeight="0dip"
			android:divider="#00000000"
			android:layout_height="wrap_content"
			android:layout_width="80dip">
		</ListView>
		<ListView android:id="@+id/listview4"
			android:dividerHeight="0dip"
			android:divider="#00000000"
			android:layout_height="wrap_content"
			android:layout_width="80dip">
		</ListView>			
	</LinearLayout>
	
	<LinearLayout android:id="@+id/layout22"
	    android:orientation="horizontal"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="center_vertical|center_horizontal" 
    	android:layout_gravity="center_vertical|center_horizontal|center">
		
			//Go Back Button	
			<Button android:id="@+id/back_button"
        		android:layout_width="wrap_content"
       			android:layout_height="wrap_content"
        		android:text="Go Back"
    			android:onClick="myClickHandler3" />

        	</LinearLayout>	
 
 //Another, Thicker Divider   
	<LinearLayout android:id="@+id/thick_divider"
		android:layout_width="fill_parent"
		android:layout_height="5dip"
		android:background="#ffffffff" 
	/>
		  
//Show Bidding Header		  
	<LinearLayout android:id="@+id/bidding_header"
		android:background="#ff3333FF"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent">
		<TextView android:id="@+id/west"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:gravity="center"
			android:text="West"
			android:height="20dip"
			android:width="80dip"
		/>
		<TextView android:id="@+id/north"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:gravity="center"
			android:text="North"
			android:height="20dip"
			android:width="80dip"
		/>
		<TextView android:id="@+id/east"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:gravity="center"
			android:text="East"
			android:height="20dip"
			android:width="80dip"
		/>
		<TextView android:id="@+id/south"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:gravity="center"
			android:text="South"
			android:height="20dip"
			android:width="80dip"
		/>
	</LinearLayout>

//Thin Divider
	<LinearLayout android:id="@+id/thin_divider_2"
		android:layout_width="fill_parent"
		android:layout_height="1dip"
		android:background="?android:attr/listDivider" 
	/>

//Display Bidding Information		
	<LinearLayout android:id="@+id/layout2"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<ListView android:id="@+id/listview5"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
		/>
	</LinearLayout>

</LinearLayout>